<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/linear_layout_main_activity">

    <TextView
        android:id="@+id/custom_row_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="#242424"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/custom_row_reviewer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textColor="#242424"
        android:textSize="12sp"
        android:textStyle="italic"
        android:typeface="sans"
        android:gravity="right"/>

    <TextView
        android:id="@+id/custom_row_category"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/custom_row_reviewer"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/custom_row_nominee"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/custom_row_category"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/custom_row_review"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/custom_row_nominee"
        android:textSize="16sp"
        android:textStyle="bold" />


</RelativeLayout>